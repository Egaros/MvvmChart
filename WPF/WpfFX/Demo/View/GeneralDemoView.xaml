<UserControl x:Class="Demo.GeneralDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo"
             xmlns:mvvmCharting="clr-namespace:MvvmCharting.WpfFX;assembly=MvvmChartWpfFX"
             xmlns:axis="clr-namespace:MvvmCharting.WpfFX.Axis;assembly=MvvmChartWpfFX"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:DemoDataViewModel x:Key="DemoDataViewModel"/>

        <mvvmCharting:EllipseGeometryBuilder x:Key="EllipseGeometryBuilder" 
                                             RadiusX="6" 
                                             RadiusY="6"/>
        <mvvmCharting:RectangleGeometryBuilder x:Key="RectangleGeometryBuilder"
                                       Size="15,15"/>

        <DataTemplate x:Key="ScatterDataTemplate">
            <mvvmCharting:Scatter />
        </DataTemplate>


        <DataTemplate x:Key="Scatter2DataTemplate">
            <mvvmCharting:Scatter2 Fill="Red" 
                                   GeometryBuilder="{StaticResource RectangleGeometryBuilder}"
                                   Opacity="0.6"/>
        </DataTemplate>


        <local:IndexToScatterTemplateConverter x:Key="IndexToScatterTemplateConverter"
                                               ScatterTemplate="{StaticResource ScatterDataTemplate}"
                                               Scatter2Template="{StaticResource Scatter2DataTemplate}"/>


        <local:IndexToStrokeConverter x:Key="IndexToStrokeConverter"/>

        <DataTemplate x:Key="SeriesTemplate0" DataType="local:SomePointList">
            <mvvmCharting:PolyLineSeries IndependentValueProperty="t"
                                         DependentValueProperty="Y"
                                         Stroke="{Binding Index, Converter={StaticResource IndexToStrokeConverter}}"
                                         StrokeThickness="1.5"
                                         IsHighLighted="{Binding IsHighlighted, Mode=TwoWay}"
                                         Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                         IsScatterVisible="{Binding ShowSeriesPoints}"
                                         IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                         ItemsSource="{Binding DataList}"
                                         ScatterTemplate="{Binding SelectedScatterTemplateType, Converter={StaticResource IndexToScatterTemplateConverter}}">

            </mvvmCharting:PolyLineSeries>
        </DataTemplate>

        <DataTemplate x:Key="SeriesTemplate1" DataType="local:SomePointList">
            <mvvmCharting:StepLineSeries IndependentValueProperty="t"
                                         DependentValueProperty="Y"
                                         Stroke="{Binding Index, Converter={StaticResource IndexToStrokeConverter}}"
                                         StrokeThickness="1.5"
                                         IsHighLighted="{Binding IsHighlighted, Mode=TwoWay}"
                                         Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                         IsScatterVisible="{Binding ShowSeriesPoints}"
                                         IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                         ItemsSource="{Binding DataList}"
                                         ScatterTemplate="{Binding SelectedScatterTemplateType, Converter={StaticResource IndexToScatterTemplateConverter}}"/>

        </DataTemplate>

        <DataTemplate x:Key="SeriesTemplate2" DataType="local:SomePointList">
            <mvvmCharting:SplineSeries IndependentValueProperty="t"
                                       DependentValueProperty="Y"
                                       Stroke="{Binding Index, Converter={StaticResource IndexToStrokeConverter}}"
                                       StrokeThickness="1.5"
                                       IsHighLighted="{Binding IsHighlighted, Mode=TwoWay}"
                                       Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                       IsScatterVisible="{Binding ShowSeriesPoints}"
                                       IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                       ItemsSource="{Binding DataList}"
                                       ScatterTemplate="{Binding SelectedScatterTemplateType, Converter={StaticResource IndexToScatterTemplateConverter}}">
            </mvvmCharting:SplineSeries>
        </DataTemplate>

        <local:SeriesTemplateSelector x:Key="SeriesTemplateSelector"
                                      DataTemplate0="{StaticResource SeriesTemplate0}"
                                      DataTemplate1="{StaticResource SeriesTemplate1}"
                                      DataTemplate2="{StaticResource SeriesTemplate2}"/>

        <local:ChartSettingTestViewModel x:Key="ChartSettingTestViewModel"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <mvvmCharting:Chart Background="Bisque"
                                  GridLineControlVisibility="{Binding ShowGridLine, Source={StaticResource ChartSettingTestViewModel}, Converter={StaticResource t2v}}"
                                  LegendVisibility="{Binding ShowLegend, Source={StaticResource ChartSettingTestViewModel}, Converter={StaticResource t2v}}"
                                  SeriesTemplateSelector="{StaticResource SeriesTemplateSelector}"
                                  SeriesItemsSource="{Binding ItemsSourceList, Source={StaticResource DemoDataViewModel}}">
            <mvvmCharting:Chart.XAxis>
                <axis:LinearAxis Placement="{Binding Source={StaticResource ChartSettingTestViewModel}, Path=SelectedXPlacement}"/>
            </mvvmCharting:Chart.XAxis>
            <mvvmCharting:Chart.YAxis>
                <axis:LinearAxis Placement="{Binding Source={StaticResource ChartSettingTestViewModel}, Path=SelectedYPlacement}"/>
            </mvvmCharting:Chart.YAxis>

            <mvvmCharting:Chart.LegendItemTemplate>
                <DataTemplate DataType="local:SomePointList">
                    <mvvmCharting:LegendItemControl 
                        IsHighlighted="{Binding IsHighlighted, Mode=TwoWay}"
                        IndicatorBrush="{Binding Index, Converter={StaticResource IndexToStrokeConverter}}"/>
                </DataTemplate>
            </mvvmCharting:Chart.LegendItemTemplate>

            <mvvmCharting:Chart.BackgroundImage>
                <Image Source="../image/Caribbean1.jpg" 
                       Stretch="Fill" 
                       Visibility="{Binding ShowBackgroundImage, Source={StaticResource ChartSettingTestViewModel}, Converter={StaticResource t2v}}"/>
            </mvvmCharting:Chart.BackgroundImage>
        </mvvmCharting:Chart>

        
        <StackPanel Grid.Row="1" 
                    DataContext="{Binding Source={StaticResource DemoDataViewModel}}"
                    Margin="10"
                    Orientation="Horizontal">
            <GroupBox Margin="10" Padding="9">
                <StackPanel>
                    <TextBlock VerticalAlignment="Center" Margin="6" Text="Scatter template: "/>

                    <ComboBox Width="160"
                              Margin="6"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding AvailableScatterTemplates}"
                              SelectedItem="{Binding SelectedScatterTemplateType, Mode=TwoWay}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="10" 
                      Padding="9" 
                      DataContext="{Binding Source={StaticResource ChartSettingTestViewModel}}">
                <StackPanel>
                    <TextBlock VerticalAlignment="Center" Margin="6" Text="X Axis placement: "/>

                    <ComboBox Width="160"
                              Margin="6"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding XAxisPlacements}"
                              SelectedItem="{Binding SelectedXPlacement, Mode=TwoWay}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="10" 
                      Padding="9" 
                      DataContext="{Binding Source={StaticResource ChartSettingTestViewModel}}">
                <StackPanel>
                    <TextBlock VerticalAlignment="Center" Margin="6" Text="Y Axis placement: "/>

                    <ComboBox Width="160"
                              Margin="6"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding YAxisPlacements}"
                              SelectedItem="{Binding SelectedYPlacement, Mode=TwoWay}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="10" 
                      Padding="9" 
                      DataContext="{Binding Source={StaticResource ChartSettingTestViewModel}}">
                <StackPanel DataContext="{Binding Source={StaticResource ChartSettingTestViewModel}}">
                    
                    <CheckBox Content="show back ground image"
                              IsChecked="{Binding ShowBackgroundImage, Mode=TwoWay}"/>
                    <CheckBox Content="show GridLine"
                              IsChecked="{Binding ShowGridLine, Mode=TwoWay}"/>

                    <CheckBox Content="show Legend"
                              IsChecked="{Binding ShowLegend, Mode=TwoWay}"/>
                </StackPanel>
            </GroupBox>


        </StackPanel>


    </Grid>

   
</UserControl>
