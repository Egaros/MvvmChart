<UserControl x:Class="Demo.BigDataTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo"
             xmlns:mvvmCharting="clr-namespace:MvvmCharting;assembly=Cartesian2DChart"
             xmlns:axis="clr-namespace:MvvmCharting.Axis;assembly=Cartesian2DChart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:BigDataViewModel x:Key="BigDataViewModel"/>

        <mvvmCharting:EllipseGeometryBuilder x:Key="EllipseGeometryBuilder" RadiusX="6" RadiusY="6"/>
        <DataTemplate x:Key="ScatterDataTemplate">
            <mvvmCharting:Scatter Fill="RoyalBlue" 
                                  GeometryBuilder="{StaticResource EllipseGeometryBuilder}"
                                  Opacity="0.6">

            </mvvmCharting:Scatter>
        </DataTemplate>

        <DataTemplate x:Key="Scatter2DataTemplate">
            <mvvmCharting:Scatter2 >


            </mvvmCharting:Scatter2>
        </DataTemplate>

        <local:IndexToScatterTemplateConverter x:Key="IndexToScatterTemplateConverter"
                                               ScatterTemplate="{StaticResource ScatterDataTemplate}"
                                               Scatter2Template="{StaticResource Scatter2DataTemplate}"/>


        <DataTemplate x:Key="SeriesTemplate" DataType="local:SomePointList">
            <mvvmCharting:PolyLineSeries IndependentValueProperty="t"
                                             DependentValueProperty="Y"
                                             Stroke="CadetBlue"
                                             StrokeThickness="1.5"
                                             IsScatterVisible="{Binding ShowSeriesPoints}"
                                             IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                             ItemsSource="{Binding DataList}"
                                             ScatterTemplate="{Binding SelectedScatterTemplateType, Converter={StaticResource IndexToScatterTemplateConverter}}"
                                            >
            </mvvmCharting:PolyLineSeries>

        </DataTemplate>




    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <mvvmCharting:SeriesChart Background="Bisque"
                                  SeriesDataTemplate="{StaticResource SeriesTemplate}"
                                  SeriesItemsSource="{Binding ItemsSourceList, Source={StaticResource BigDataViewModel}}">

            <mvvmCharting:SeriesChart.XAxis>
                <axis:AxisBase />
            </mvvmCharting:SeriesChart.XAxis>

            <mvvmCharting:SeriesChart.YAxis>
                <axis:AxisBase />
            </mvvmCharting:SeriesChart.YAxis>

        </mvvmCharting:SeriesChart>




        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <CheckBox Content="ShowScatter" 
                      VerticalAlignment="Center"
                      IsChecked="{Binding Source={StaticResource BigDataViewModel}, Path=ShowSeriesPointsGlobal, Mode=TwoWay}"/>

            <GroupBox  Margin="20" Padding="9">
                <StackPanel>
                    <TextBlock Margin="6" Text="Scatter template: "/>

                    <ComboBox Width="160"
                          Margin="6"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding Source={StaticResource BigDataViewModel}, Path=AvailableScatterTemplates}"
                          SelectedItem="{Binding Source={StaticResource BigDataViewModel}, Path=SelectedScatterTemplateType, Mode=TwoWay}"></ComboBox>
                </StackPanel>
            </GroupBox>


            <GroupBox Margin="20" Padding="9">
                <StackPanel >
                    <TextBlock Text="Series Data Count:" Margin="6" />

                    <ComboBox Margin="6"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding Source={StaticResource BigDataViewModel}, Path=AvailableSizes}"
                              SelectedItem="{Binding Source={StaticResource BigDataViewModel}, Path=SelectedDataSize, Mode=TwoWay}"
                    />
                </StackPanel>

            </GroupBox>

        </StackPanel>
    </Grid>


</UserControl>
