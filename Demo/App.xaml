<Application x:Class="Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Demo"
             xmlns:mvvmCharting="clr-namespace:MvvmCharting;assembly=Cartesian2DChart"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <BooleanToVisibilityConverter x:Key="t2v"/>


        <mvvmCharting:EllipseGeometryBuilder x:Key="EllipseGeometryBuilder" RadiusX="6" RadiusY="6"/>
        <DataTemplate x:Key="DefaultItemPointDataTemplate" 
                      DataType="mvvmCharting:ScatterViewModel">
            <mvvmCharting:Scatter Fill="RoyalBlue" 
                           GeometryBuilder="{StaticResource EllipseGeometryBuilder}"
                           Opacity="0.8"/>
        </DataTemplate>


        <local:DemoDataViewModel x:Key="GlobalDemoDataViewModel"/>
         
    </Application.Resources>
</Application>
